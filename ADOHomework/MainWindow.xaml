            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}">Имя</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=PhoneNumber}" Width="100">Номер телефона</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>-->
        <!--<TextBox Grid.Column="1" Grid.Row="5" Height="30"  Margin="0 0 15 0"
            Validation.Error="TextBox_Error"/>-->

    </Grid>

    
</Window>
