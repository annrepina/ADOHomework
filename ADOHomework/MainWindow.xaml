    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="500"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Server Name" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <TextBox Grid.Row="1" Grid.Column="0" Width="200" MaxWidth="250" VerticalAlignment="Center" HorizontalAlignment="Left" 
                 Margin="5" Text="{Binding ServerName, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsNotConnected}"/>
        <!--<TextBlock Grid.Row="2" Grid.Column="0" Text="Имя базы данных" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" FontWeight="Bold"/>
        <TextBox Grid.Row="3" Grid.Column="0" Width="400" MaxWidth="600" VerticalAlignment="Center" HorizontalAlignment="Left"
                 Margin="5" Text="{Binding DataBaseName, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsNotConnected}"/>-->
        <Button Grid.Row="2" Grid.Column="0" Content="Fill database" Padding="5,0,5,0" HorizontalAlignment="Left" IsEnabled="{Binding HasCorrectServerName}" Command="{Binding OnFillDBCommand}" Margin="5,5,5,5" 
                VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <!--<Button Grid.Row="3" Grid.Column="0" Content="Fill database" Padding="5,0,5,0" HorizontalAlignment="Left" Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}}" IsEnabled="{Binding IsConnected}" Command="{Binding OnFillDBCommand}" Margin="5,5,5,5"/>-->
        <!--SelectedItem="{Binding SelectedUser}"-->
        <DataGrid Grid.Column="1" Grid.Row="1" Grid.RowSpan="4" Margin="10, 0, 10 ,0" ItemsSource="{Binding UserTableItems, Mode=TwoWay}" Visibility="{Binding IsConnected}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="№" Binding="{Binding Number, Mode=TwoWay}" IsReadOnly="True"/>
                <DataGridTextColumn Width="3*" Header="Name">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Name" Mode="TwoWay" UpdateSourceTrigger="LostFocus" ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <local:NameValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Width="4*" Header="Phone number" Validation.ErrorTemplate="{StaticResource errorTemplate}">
                    <DataGridTextColumn.Binding>
                        <Binding Path="PhoneNumber" UpdateSourceTrigger="LostFocus" ValidatesOnDataErrors="True" Mode="TwoWay">
                            <Binding.ValidationRules>
                                <local:PhoneNumberValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid Grid.Column="2" Grid.Row="1" Grid.RowSpan="4" Margin="10, 0, 10 ,0" ItemsSource="{Binding OrderTableItems, Mode=TwoWay}" Visibility="{Binding IsConnected}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="№" Binding="{Binding Number, Mode=TwoWay}" IsReadOnly="True"/>
                <DataGridTextColumn Width="1.5*" Header="№ of User">
                    <DataGridTextColumn.Binding>
                        <Binding Path="UserNumber" Mode="TwoWay" UpdateSourceTrigger="LostFocus" ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <local:NumberOfUserValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Width="3*" Header="Summ">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Summ" Mode="TwoWay" UpdateSourceTrigger="LostFocus" ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <local:SummValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Width="4*" Header="Date">
                    <DataGridTextColumn.Binding>
                        <Binding Path="DateTime" Mode="TwoWay" UpdateSourceTrigger="LostFocus" ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <local:DateTimeValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
